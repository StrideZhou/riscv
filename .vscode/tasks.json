{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verilator build",
            "type": "shell",
            "command": [
                "verilator -Wno-lint -Wno-style -Wno-context ",
                "--trace ",
                // "--trace-threads 2 ",
                "-j 8 ",
                "-sv --cc --exe --build sim_main.cpp top_tb.sv &&",

                "./obj_dir/Vtop_tb +trace &&",

                "gtkwave ./wave.vcd"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "gtkwave disp",
            "type": "shell",
            "command": [
                "gtkwave ./wave.vcd"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}

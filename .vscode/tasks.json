{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "verilator build",
            "type": "shell",
            "command": [
                "verilator -Wno-lint -Wno-style -Wno-context ",
                "--trace ",
                // "--trace-threads 2 ",
                "-j 8 ",
                "--xml-output ./obj_dir/Vtop_tb.xml ",
                "-sv --cc --exe --build sim_main.cpp top_tb.sv &&",

                "xml2stems -V ./obj_dir/Vtop_tb.xml ./obj_dir/Vtop_tb.stems &&",

                "./obj_dir/Vtop_tb +trace "
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build&display",
            "dependsOn": "verilator build",
            "type": "shell",
            "command": [
                "gtkwave -o -z -c 8 -W -t ./obj_dir/Vtop_tb.stems -f ./wave.vcd wave.gtkw"
            ],
            "group": {
                
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
